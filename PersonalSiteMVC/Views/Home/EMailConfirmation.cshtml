@model PersonalSiteMVC.Models.ContactViewModel
@{
    ViewBag.Title = "E-mail Confirmation";
}
<div class="container-fluid p-4">
    <h2>@ViewBag.Title</h2>

    <h3>Thank you @Model.firstName!</h3>
    <p>
        We have recieved your email, and will respond soon. Details of your message are below.
    </p>
    <p>
        Name: @Model.firstName @Model.lastName
        <br />
        Email: @Model.Email
        <br />
        Subject: @Model.Subject
        <br />
        Message: @Model.Message
    </p>

</div>