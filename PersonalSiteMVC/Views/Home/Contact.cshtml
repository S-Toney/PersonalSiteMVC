@model PersonalSiteMVC.Models.ContactViewModel
@{
    ViewBag.Title = "Contact Me";
}
<div class="container-fluid p-4">
    <!-- About-->
    <section class="resume-section" id="about">
        <div class="resume-section-content">
            <h1 class="mb-0">
                Let's
                <span class="text-primary">Talk!</span>
            </h1>
            <div class="subheading mb-5">
                4849 NW Rochester Rd · Topeka, KS 66617 · (210) 918-0491 ·
                <a href="mailto:s.l.toney@outlook.com">s.l.toney@outlook.com</a>
            </div>
            <p class="lead mb-5">Do you have some development work that needs to be done? I'd love to hear from you! Click my above email address to send an email or fill out the form below.</p>
            <div class="social-icons slide">
                <a class="social-icon" href="http://www.linkedin.com/in/s-tessa-toney" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a class="social-icon" href="https://github.com/S-Toney" target="_blank"><i class="fab fa-github"></i></a>
                <a class="social-icon" href="https://twitter.com/STessaToney1" target="_blank"><i class="fab fa-twitter"></i></a>
                <a class="social-icon" href="https://stackoverflow.com/users/14554997/tessa" target="_blank"><i class="fab fa-stack-overflow"></i></a>
                <a class="social-icon" href="https://https://www.hackerrank.com/s_l_toney" target="_blank"><i class="fab fa-hackerrank"></i></a>
                
            </div>
        </div>
    </section>
    <hr class="mb-2" />
    <!-- CONTACT FORM W/GOOGLE MAPS BACKGROUND -->
    @if (ViewBag.ErrorMessage != null)
    {
        <h3 class="text-danger">@Html.Raw(ViewBag.ErrorMessage)</h3>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section>
            <div id="maps"></div>
            <form id="contactform">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                        @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col">
                        @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                        @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control", @placeholder = "Company (Optional)" } })
                        @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Position (Optional)" } })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your email address" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Subject" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control ml-3 mt-3", @placeholder = "Your message..." } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <input type="submit" name="submit button" value="Send Message" class="btn btn-dark button mx-4 my-2" />
                </div>
            </form>
        </section>
    }
</div>